<!DOCTYPE html>
<html>
  <head>
    <title>Eventright</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%# *= require 'reset.css' %>
    <%= javascript_include_tag 'application' %>
    <script>
      window.loginPhoto = "<%= image_url('loginPhoto.jpg')%>"
      window.signupPhoto = "<%= image_url('signupPhoto.jpg')%>" 
      window.heroBanner = "<%= image_url('heroBanner.jpg')%>"
      window.testPhoto = "<%= image_url('test.jpg')%>"
    </script>
    <%= favicon_link_tag asset_path('orange.png') %>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
